generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////
// ENUMS
////////////////////////////

enum Role {
  SUPERADMIN
  ADMIN
  MANAGER
  STAFF
}

enum MovementType {
  RECEIPT
  SALE
  SALE_REVERSAL
  ADJUSTMENT_IN
  ADJUSTMENT_OUT
}

enum PaymentMethod {
  CASH
  MPESA
  CARD
}

////////////////////////////
// USER MODEL
////////////////////////////

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STAFF)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales              Sale[]
  inventoryMovements InventoryMovement[]
}

////////////////////////////
// PRODUCT CATALOG
////////////////////////////

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Supplier {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Product {
  id                Int    @id @default(autoincrement())
  sku               String @unique
  name              String @unique
  description       String?
  unitPrice         Float
  currentStock      Int    @default(0)
  lowStockThreshold Int    @default(10)

  categoryId Int
  supplierId Int?

  category Category  @relation(fields: [categoryId], references: [id])
  supplier Supplier? @relation(fields: [supplierId], references: [id])

  saleItems    SaleItem[]
  movements    InventoryMovement[]
  alerts       Alert[]
  forecastRuns ForecastRun[]
}

////////////////////////////
// SALES (POS)
////////////////////////////

model Sale {
  id            Int           @id @default(autoincrement())
  totalAmount   Float
  paymentMethod PaymentMethod
  createdAt     DateTime      @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  items SaleItem[]
}

model SaleItem {
  id        Int   @id @default(autoincrement())
  quantity  Int
  unitPrice Float
  total     Float

  saleId    Int
  productId Int

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}

////////////////////////////
// INVENTORY MOVEMENTS
////////////////////////////

model InventoryMovement {
  id        Int          @id @default(autoincrement())
  type      MovementType
  quantity  Int
  createdAt DateTime     @default(now())

  productId Int
  userId    Int

  product Product @relation(fields: [productId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([productId])
}

////////////////////////////
// FORECASTING (OPTIONAL)
////////////////////////////

model ForecastRun {
  id        Int      @id @default(autoincrement())
  productId Int
  horizon   Int
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])
}

////////////////////////////
// ALERTS
////////////////////////////

enum AlertType {
  LOW_STOCK
  OVERSTOCK
  OTHER
}

model Alert {
  id         Int       @id @default(autoincrement())
  productId  Int?
  type       AlertType
  message    String
  isResolved Boolean   @default(false)
  createdAt  DateTime  @default(now())

  product Product? @relation(fields: [productId], references: [id])
}
