// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ðŸ§  User Model
model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(USER)   // ðŸ‘ˆ Added role field
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}


// ðŸ›’ Product Model
model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  stock       Int
  createdAt   DateTime    @default(now())
  inventory   Inventory?
  sales       Sale[]
}


// ðŸ“¦ Inventory Model
model Inventory {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  quantity    Int
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}



// ðŸ’µ Sales Model (optional - for next step)
model Sale {
  id         Int      @id @default(autoincrement())
  quantity   Int
  totalPrice Float
  createdAt  DateTime @default(now())

  productId Int
  product   Product @relation(fields: [productId], references: [id])
}
