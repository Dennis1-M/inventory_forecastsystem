generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////
// ENUMS
////////////////////////////

enum Role {
  SUPERADMIN
  ADMIN
  MANAGER
  STAFF
}

enum MovementType {
  RECEIPT
  SALE
  SALE_REVERSAL
  ADJUSTMENT_IN
  ADJUSTMENT_OUT
}

enum PaymentMethod {
  CASH
  MPESA
  CARD
}

////////////////////////////
// USER MODEL
////////////////////////////

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STAFF)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales              Sale[]
  inventoryMovements InventoryMovement[]
  purchaseOrdersCreated PurchaseOrder[] @relation("CreatedPOs")
  cycleCounts         CycleCount[]
  activityLogs        ActivityLog[]
}

////////////////////////////
// PRODUCT CATALOG
////////////////////////////

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Supplier {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
  purchaseOrders PurchaseOrder[]
  inventoryMovements InventoryMovement[]
}

model Product {
  id                Int    @id @default(autoincrement())
  sku               String @unique
  name              String @unique
  description       String?
  unitPrice         Float
  costPrice         Float?
  currentStock      Int    @default(0)
  lowStockThreshold Int    @default(10)

  categoryId Int
  supplierId Int?

  category Category  @relation(fields: [categoryId], references: [id])
  supplier Supplier? @relation(fields: [supplierId], references: [id])

  saleItems    SaleItem[]
  movements    InventoryMovement[]
  alerts       Alert[]
  purchaseOrderItems PurchaseOrderItem[]
  forecastRuns ForecastRun[]
  cycleCountItems CycleCountItem[]
}

////////////////////////////
// SALES (POS)
////////////////////////////

model Sale {
  id            Int           @id @default(autoincrement())
  totalAmount   Float
  paymentMethod PaymentMethod
  createdAt     DateTime      @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  items SaleItem[]
}

model SaleItem {
  id        Int   @id @default(autoincrement())
  quantity  Int
  unitPrice Float
  total     Float

  saleId    Int
  productId Int

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}

////////////////////////////
// INVENTORY MOVEMENTS
////////////////////////////

model InventoryMovement {
  id         Int          @id @default(autoincrement())
  type       MovementType
  quantity   Int
  costPrice  Float?
  description String?
  timestamp  DateTime     @default(now())

  productId Int
  userId    Int
  supplierId Int?

  product Product @relation(fields: [productId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
  supplier Supplier? @relation(fields: [supplierId], references: [id])

  @@index([productId])
}

////////////////////////////
// FORECASTING (OPTIONAL)
////////////////////////////

model ForecastRun {
  id        Int      @id @default(autoincrement())
  productId Int
  horizon   Int
  method    String   @default("EXPONENTIAL_SMOOTHING")
  accuracy  Float?   // RMSE or other accuracy metric
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])
  points  ForecastPoint[]
}

model ForecastPoint {
  id        Int      @id @default(autoincrement())
  runId     Int
  period    Int      // Day 1, 2, ..., horizon
  predicted Float    // Point forecast
  lower95   Float?   // 95% confidence lower bound
  upper95   Float?   // 95% confidence upper bound
  
  run ForecastRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
}

////////////////////////////
// PURCHASE ORDERS
////////////////////////////

enum PurchaseOrderStatus {
  DRAFT
  ORDERED
  PARTIALLY_RECEIVED
  RECEIVED
  CANCELLED
}

model PurchaseOrder {
  id            Int                 @id @default(autoincrement())
  supplierId    Int
  status        PurchaseOrderStatus @default(DRAFT)
  expectedDate  DateTime?
  createdAt     DateTime            @default(now())
  createdById   Int

  supplier Supplier @relation(fields: [supplierId], references: [id])
  createdBy User    @relation("CreatedPOs", fields: [createdById], references: [id])
  items PurchaseOrderItem[]
}

model PurchaseOrderItem {
  id              Int    @id @default(autoincrement())
  purchaseOrderId Int
  productId       Int
  quantityOrdered Int
  quantityReceived Int   @default(0)
  unitCost        Float

  purchaseOrder PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([purchaseOrderId])
  @@index([productId])
}

////////////////////////////
// ALERTS
////////////////////////////

enum AlertType {
  LOW_STOCK
  OVERSTOCK
  OTHER
  OUT_OF_STOCK
}

model Alert {
  id         Int       @id @default(autoincrement())
  productId  Int?
  type       AlertType
  message    String
  isResolved Boolean   @default(false)
  isRead     Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  product Product? @relation(fields: [productId], references: [id])
}

////////////////////////////
// CYCLE COUNTS
////////////////////////////

model CycleCount {
  id                  Int               @id @default(autoincrement())
  createdById         Int
  createdAt           DateTime          @default(now())
  reason              String?           
  totalShrinkageQty   Int               @default(0)
  totalShrinkageValue Float             @default(0.0)

  createdBy User @relation(fields: [createdById], references: [id])
  items     CycleCountItem[]
}

model CycleCountItem {
  id           Int      @id @default(autoincrement())
  cycleCountId Int
  productId    Int
  expectedQty   Int
  countedQty    Int
  delta         Int
  valueDelta    Float

  cycleCount CycleCount @relation(fields: [cycleCountId], references: [id])
  product    Product    @relation(fields: [productId], references: [id])

  @@index([cycleCountId])
  @@index([productId])
}

////////////////////////////
// ACTIVITY LOGS
////////////////////////////

model ActivityLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  description String?
  ipAddress String?
  status    String   @default("success")
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([timestamp])
}

////////////////////////////
// SETTINGS
////////////////////////////

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String
}